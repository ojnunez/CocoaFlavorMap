.row
  .medium-12.columns
    = f.association :school_class
.row
  .medium-6.columns
    = f.input :name, required: true
  .medium-6.columns
    = f.input :lastname

.row
  .medium-6.columns
    .input.select.required
      = label_tag "role", "<abbr title='required'>*</abbr>Rol".html_safe, class: "select required"
      = select_tag "role", options_for_select(@allowed_roles.map{ |i| [t(i, scope: 'activerecord.enum.user.role'), i] }, @roles.try(:name)), prompt: "Permisos disponibles", required: true, class: "select required"

.row
  .medium-6.columns
    = f.input :email, required: true

.row
  .medium-6.columns
    = f.input :password
  .medium-6.columns
    = f.input :password_confirmation
