.row
  .small-12.medium-8.small-centered.medium-centered.columns
    .login-container
      .flat-form
        #login.form-action.show.animated.bounceInDown
          %center
            = image_tag("admin/logo.jpg")
          %br
          = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: '' } ) do |f|

            .form-group
              .input-group
                .input-group-addon
                  %span.glyphicon.glyphicon-user
                = f.email_field :email, placeholder: t('.enter_email'), autofocus: true, class: 'form-control'
            .form-group
              .input-group
                .input-group-addon
                  %span.glyphicon.glyphicon-lock
                = f.password_field :password, autocomplete: 'off', placeholder: t('.enter_password'), class: 'form-control'
            .text-center
              = f.submit 'Ingresar', class: 'button'
            %center
              - flash.each do |key, value|
                .alert.alert-success
                  = value


        #reset.form-action.hide.animated.flipInX
          %h1
            = t '.reset_password'
          %p
            = t '.reset_password_explanation'
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            %ul
              %li
                = f.email_field :email, autofocus: true, placeholder: t('.enter_email')
                = f.submit t('.send_instructions'), class: 'button'
