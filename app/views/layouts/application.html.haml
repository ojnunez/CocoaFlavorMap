!!!
%html.no-js{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Cocoa Flavor Map
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'https://www.google.com/jsapi'
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBihwPmyzbsIiMePF3j9ak60RZvgAfr3dM&callback=initMap', async: true, defer: true


  %body
    = render partial: "layouts/site/header"
    = yield
    = render partial: "layouts/site/footer"
